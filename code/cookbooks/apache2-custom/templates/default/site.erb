<VirtualHost *:80>
  ServerAdmin <%= node['apache']['contact'] %>
  ServerName <%= @name %>
  
  DocumentRoot /var/www/<%= @name %>/public
  
  <Directory /var/www/<%= @name %>/public>
    AllowOverride All
    Order Allow,Deny
    Allow from all
  </Directory>

  LogLevel warn
  ErrorLog <%= node['apache']['log_dir'] %>/<%= @name %>.error.log
  CustomLog <%= node['apache']['log_dir'] %>/<%= @name %>.access.log combined
  
  ServerSignature On
</VirtualHost>